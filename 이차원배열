#include <stdio.h>
#include <stdbool.h>

int main(void)
{
	int arr[3][5] = { 0 };
	for (int i = 0; i < 3; i++)
	{
		for (int j = 0; j < 5; j++)
		{
			arr[i][j] = i * 5 + j;
		}
	}

	for (int i = 0; i < 3; i++)
	{
		for (int j = 0; j < 5; j++)
		{
			printf("%3d ", arr[i][j]);
		}
		printf("\n");
	}
}

======================================================
#include <stdio.h>
#include <stdbool.h>

int main(void)
{
	int arr[4][4] = {
		{12, 5, 2, -1},
		{-3, 27, 10, 6},
		{4, 16, -6, -21},
		{7, 25, -15, 66}
	};
	int max = arr[0][0];
	int min = arr[0][0];
	for (int i = 0; i < 4; i++)
	{
		for (int j = 0; j < 4; j++)
		{
			if (arr[i][j] > max)
			{
				max = arr[i][j];
			}
			if (arr[i][j] < min)
			{
				min = arr[i][j];
			}

		}
	}
	printf("%d\n", max);
	printf("%d\n", min);


	return 0;
}

