#include<stdio.h>
#include <math.h>


void inc_by_10(int* xp) {
	*xp += 10;
}



int main(void) {
	
	int x; printf("x = "); 
	scanf_s("%d", &x); 
	inc_by_10(&x); 
	printf("x = %d\n", x); 
	printf("\n");

	return 0;
}
==============

#include<stdio.h>
#include <math.h>


void mult2_int(int* xp) { 
	*xp *= 2; }


int main(void) {
	int x = 10, y = 20, z = 30; 
	mult2_int(&x); 
	mult2_int(&y); 
	mult2_int(&z); 
	printf(" % d % d % d\n", x, y, z);

	return 0;
}

